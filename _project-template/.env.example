PROJECT_NAME=startup-template
LETSENCRYPT_EMAIL=youremail@example.com

# Database Configuration
POSTGRES_PORT=5432 # พอร์ตที่ PostgreSQL สามารถ access จากภายนอกได้ (ใช้ SSH Tunnel)
POSTGRES_USER=myuser
POSTGRES_PASSWORD=my_strong_db_password
POSTGRES_DB=mydb

# NestJS API Configuration
API_PORT=3000 # พอร์ตที่ NestJS App รันอยู่ภายในคอนเทนเนอร์

# Vue.js Backoffice Configuration
BACKOFFICE_PORT=3001 # พอร์ตที่ Vue.js App รันอยู่ภายในคอนเทนเนอร์

# Vue.js Frontend Configuration
FRONTEND_PORT=3002 # พอร์ตที่ Vue.js App รันอยู่ภายในคอนเทนเนอร์

# Hostnames for Caddy Docker Proxy (แทนที่ด้วยโดเมนจริงของคุณ)
# *** ตรวจสอบว่าโดเมนเหล่านี้ชี้มายัง IP Address ของเซิร์ฟเวอร์ Docker ของคุณ ***
API_HOST=api.yourdomain.com
BACKOFFICE_HOST=backoffice.yourdomain.com
FRONTEND_HOST=yourdomain.com

# Other application-specific variables if needed
